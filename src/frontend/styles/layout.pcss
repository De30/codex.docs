.docs {
  min-height: calc(100vh - var(--layout-height-header));

  @media (--desktop) {
    display: flex;
  }

  &__content {
    flex-grow: 2;
    word-wrap: break-word;


    @media (--mobile) {
      width: 100%;
      flex-basis: 100%;
    }

    &-inner {
      max-width: var(--layout-width-main-col);
      margin: 0 auto;

      @media (--desktop) {
        margin-right: var(--layout-padding-horizontal);
        margin-left: 0;
      }
    }
  }

  &__content {
    --max-space-between-cols: 160px;
    padding: var(--layout-padding-vertical) var(--layout-padding-horizontal);
    display: flex;
    margin: 0 auto;
    justify-content: space-between;
    max-width: calc(var(--layout-width-main-col) + var(--max-space-between-cols) + var(--layout-sidebar-width));

    @media (--mobile) {
      padding: 20px var(--layout-padding-horizontal);
    }
  }

  &__aside-right {
    /* tmp styles */
    background: gray;
    height: 100px;
    
    width: var(--layout-sidebar-width);
    min-width: 160px;
    display: none;

    @media (--desktop) {
      display: block;
    }
  }
}
